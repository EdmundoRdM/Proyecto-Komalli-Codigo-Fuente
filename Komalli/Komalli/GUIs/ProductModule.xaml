        Width="1448" 
        Fill="#2C9B00"
        RadiusX="20" 
        RadiusY="20"/>

            <Label Content="Productos" 
       HorizontalAlignment="Left" 
       Margin="559,44,0,0" 
       VerticalAlignment="Top" 
       FontFamily="Titan One"
       FontWeight="Bold"
       Foreground="#FFFFFDFD"
       FontSize="120"/>

            <Image
             HorizontalAlignment="Left"
             Height="184" 
             Margin="328,29,0,0" 
             VerticalAlignment="Top"
             Width="228" 
             Source="{StaticResource ComedoresU}"/>
        </Grid>

        <Grid>
            <Rectangle 
        HorizontalAlignment="Left" 
        Margin="367,255,0,594"  
        Width="867" 
        Fill="#BEBEBE"
        RadiusX="20" 
        RadiusY="20"
        Height="55"/>

            <TextBox x:Name="txtProductSearch"
            HorizontalAlignment="Left" 
            Margin="397,255,0,594"
