            Margin="1481,243,0,0" 
            VerticalAlignment="Top"
            Width="75" 
            Source="{StaticResource NewIcon}"
            Cursor="Hand" 
            MouseLeftButtonUp="BtnRegisterProduct_Click"/>
        </Grid>

        <DataGrid Style="{DynamicResource DataGridStyle}" x:Name="ProductGrid"
        Background="AliceBlue" 
        Margin="358,352,52,50"
        Grid.Row="4"
        Grid.Column="1"
        Grid.RowSpan="2"
        Grid.ColumnSpan="4"
        AutoGenerateColumns="False"
        FontSize="15"
        CanUserAddRows="False"
        CanUserResizeColumns="False"
        CanUserSortColumns="False"
        RowBackground="Transparent"
        HeadersVisibility="Column"
        GridLinesVisibility="Horizontal"
        HorizontalGridLinesBrush="#030a00"
        VerticalGridLinesBrush="#030a00">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Nombre"
                            Width="200"
                            Binding="{Binding ProductName}"/>
                <DataGridTextColumn Header="Tipo"
                            Width="400"
                            Binding="{Binding ProductType}"/>
                <DataGridTextColumn Header="Precio"
                            Width="*"
                            Binding="{Binding ProductPrice}"/>
                <DataGridTextColumn Header="Disponible"
                            Width="*"
                            Binding="{Binding ProductAvailableQuantity}"/>
                <DataGridTemplateColumn Header="Opciones"
                                Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                <Button x:Name="btnUpdateStaff"
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center" 
                                Height="40" 
                                Width="40" 
                                Cursor="Hand"
                                Click = "BtnUpdateProduct_Click"
                                CommandParameter="{Binding IdProduct}"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Margin="5,0,5,0">
                                    <StackPanel Orientation="Horizontal">
                                        <Image
                                        HorizontalAlignment="Center" 
                                        Height="35" 
                                        VerticalAlignment="Center"
                                        Width="35"
                                        RenderTransformOrigin="0.511,0.545" 
                                        Source="{StaticResource EditIcon}"
                                        Cursor="Hand"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnDeleteProduct"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center" 
                                 Height="40" 
                                 Width="40" 
                                 Cursor="Hand"
                                 Click = "BtnDeleteProduct_Click"
                                 CommandParameter="{Binding IdProduct}"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 Margin="5,0,5,0">
                                    <StackPanel Orientation="Horizontal">
                                        <Image 
                                         HorizontalAlignment="Center" 
                                         Height="35" 
                                         VerticalAlignment="Top"
                                         Width="35"
                                         RenderTransformOrigin="0.511,0.545" 
                                         Source="{StaticResource TrashIcon}"
                                         Cursor="Hand"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <local:NavigationBar Grid.Column="0" HorizontalAlignment="Left" Width="300"/>

        <Grid x:Name="RegisterProductForm" Visibility="Collapsed">
            <Rectangle HorizontalAlignment="Left" 
                   Height="922" 
                   Margin="301,0,0,0" 
                   VerticalAlignment="Center" 
                   Width="1442" 
                   Fill="White"/>
            <Grid>
                <Rectangle 
                HorizontalAlignment="Left" 
                Margin="295,50,0,738"  
                Width="1448" 
                Fill="#2C9B00"
                RadiusX="20" 
                RadiusY="20"/>

