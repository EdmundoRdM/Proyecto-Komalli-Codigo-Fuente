            Foreground="#FF262222">
            </TextBox>

            <Label Content="Buscar producto por nombre:" 
            HorizontalAlignment="Left" 
            Margin="379,215,0,0" 
            VerticalAlignment="Top"
            FontSize="25"
            Foreground="#9b9b9b"
            FontFamily="Inter"
            FontWeight="Bold"/>

            <Image
